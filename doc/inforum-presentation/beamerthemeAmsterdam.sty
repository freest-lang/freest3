\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\ProcessOptionsBeamer

\RequirePackage{tikz}
\usetikzlibrary{fadings}

\mode<presentation>

\useoutertheme[footline=authortitle]{miniframes}
\useinnertheme{circles}
\usecolortheme{whale}
\usecolortheme{orchid}

\definecolor{beamer@blendedblue}{rgb}{0.137,0.466,0.741}

\definecolor{titleleft}{rgb}{0.156,0.31,0.51}
\definecolor{titlemiddle}{rgb}{0.208,0.92,0.125}
\definecolor{titleright}{rgb}{0.208,0.92,0.125}


\setbeamercolor{structure}{fg=titleleft}
\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{title}{fg=black}
\setbeamercolor{item}{fg=black}

\setbeamercolor{background canvas}{bg=purple!20}
\pgfdeclarehorizontalshading[titleleft,titlemiddle,titleright]
      {beamer@frametitleshade}{\paperheight}{
    color(0pt)=(titleleft);
    color(0.6\paperwidth)=(titlemiddle);
    color(\paperwidth)=(titleright)
  }

\setbeamertemplate{headline}
{%
  %\begin{beamercolorbox}[colsep=1.5pt]{upper separation line head}
  \begin{beamercolorbox}{upper separation line head}
  \end{beamercolorbox}
  % \begin{beamercolorbox}{section in head/foot}
  %   \vskip2pt\insertnavigation{\paperwidth}{}{}\vskip2pt
  % \end{beamercolorbox}%
  \ifbeamer@theme@subsection%
    \begin{beamercolorbox}[colsep=1.5pt]{middle separation line head}
    \end{beamercolorbox}
    \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,%
      leftskip=.3cm,rightskip=.3cm plus1fil]{subsection in head/foot}
      \usebeamerfont{subsection in head/foot}\insertsubsectionnavigationhorizontal{\dimexpr\paperwidth-0.6cm\relax}{}{}
    \end{beamercolorbox}%
  \fi%
  \begin{beamercolorbox}[colsep=1.5pt]{lower separation line head}
  \end{beamercolorbox}
  \hbox{%
  \tikz\draw[draw=none, postaction={path fading=south,fill=black,opacity=0.3}] (0,0) rectangle (\paperwidth,0.25);
}%
}

